<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='autor_form_view' model='ir.ui.view'>
        <field name='name'>autor.form.view</field>
        <field name='model'>autor</field>
        <field name='arch' type='xml'>
            <form string='Autores'>
                <sheet>
                    <!-- Bootstrap (un group equibale a 12 columnas de la pantalla) por lo tanto si coloco 2 groups dentro de uno group, cada uno de los groups hijos se divide las columnas y tomarian 6 columnas de ancho cada uno.-->
                    <group>
                        <group>
                            <field name='name' />
                            <field name='apellido' />
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id='autor_tree_view' model='ir.ui.view'>
        <field name='name'>autor.tree.view</field>
        <field name='model'>autor</field>
        <field name='arch' type='xml'>
            <tree string='Autores'>
                <field name='name' />
                <field name='apellido' />
            </tree>
        </field>
    </record>


</odoo>